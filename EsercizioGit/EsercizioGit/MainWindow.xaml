<Window x:Class="EsercizioGit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EsercizioGit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Aggiungi Libro" HorizontalAlignment="Left" Height="42" Margin="76,306,0,0" VerticalAlignment="Top" Width="94" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Left" Height="35" Margin="76,80,0,0" TextWrapping="Wrap" Text="Autore" VerticalAlignment="Top" Width="94"/>
        <TextBox HorizontalAlignment="Left" Height="35" Margin="76,120,0,0" TextWrapping="Wrap" Text="Titolo" VerticalAlignment="Top" Width="94"/>
        <TextBox HorizontalAlignment="Left" Height="35" Margin="76,160,0,0" TextWrapping="Wrap" Text="Anno di Pubblicazione" VerticalAlignment="Top" Width="94" TextChanged="TextBox_TextChanged"/>
        <TextBox HorizontalAlignment="Left" Height="35" Margin="76,0,0,0" TextWrapping="Wrap" Text="Editore" VerticalAlignment="Center" Width="94"/>
        <TextBox HorizontalAlignment="Left" Height="35" Margin="76,240,0,0" TextWrapping="Wrap" Text="Pagine" VerticalAlignment="Top" Width="94" TextChanged="TextBox_TextChanged"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="621,214,0,0" TextWrapping="Wrap" Text="Chiusura" VerticalAlignment="Top" Width="124"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="621,169,0,0" TextWrapping="Wrap" Text="Apertura" VerticalAlignment="Top" Width="124" TextChanged="TextBox_TextChanged"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="621,124,0,0" TextWrapping="Wrap" Text="Indirizzo" VerticalAlignment="Top" Width="124"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="621,259,0,0" TextWrapping="Wrap" Text="Nome" VerticalAlignment="Top" Width="124"/>
        <Button Content="Cerca Libro dal Titolo" HorizontalAlignment="Center" Height="56" Margin="0,111,0,0" VerticalAlignment="Top" Width="142"/>
        <Button Content="Cerca Libro dall'autore" HorizontalAlignment="Center" Height="56" VerticalAlignment="Top" Width="142" Margin="0,191,0,0"/>
        <Button Content="Elenco Libri Biblioteca" HorizontalAlignment="Center" Height="56" Margin="0,271,0,0" VerticalAlignment="Top" Width="142"/>

    </Grid>
</Window>
